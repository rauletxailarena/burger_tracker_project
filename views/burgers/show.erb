<h1>
  <img class= "centered_image" src="<%= @eatery.logo_url %>" align="middle"/>
  <form action="/eateries/<%= @eatery.id %>/burgers/new" method="get">
    <button type="submit">Add more burgers</button>
  </form>
  <form action="/eateries" method="get">
    <button type="submit">Go back</button>
  </form>

</h1>



  <div class="grid-row"
    <!-- Start of first loop: burgers -->
    <% for burger in @burgers do %>
    <div class="cell">
      <div class="burger_name separator">
      <h2><%= burger.name  %> <div class="price">£<%= burger.price %></div></h2>
      </div>

      <!-- Start of the second loop: through each burger deals -->
      <% for deal in burger.deals do %>

        <p>
          <div class="deal_name">
          <%= deal.name %>
          </div>
          <div class="deal_name">
            <%= deal.pct_off %>% off
            <div
              class="discounted_price">£<%= burger.apply_deal(deal.id) %>
            </div>
          </div>
        </p>


      <% end %>
      <!-- End of deals loop -->
      <div class="two_bt_container">
        <div>
          <form action="/eateries/<%= burger.eatery.id %>/burgers/<%= burger.id %>/edit" method="get">
            <button type="submit">Edit burger</button>
          </form>
        </div>
        <div>
          <form action="/eateries/<%= burger.eatery.id %>/burgers/<%= burger.id %>/delete" method="post">
            <button type="submit">Remove burger</button>
          </form>
        </div>
      </div>
    </div>

<% end %>
<!-- End of burgers loop -->
  </div>
